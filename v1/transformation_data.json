{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "transformation_data.json",
    "title": "Pymatcal transformation data schema",
    "description": "transformation data schema, used to define the transformation for the detector to FOV relation.",
    "type": "object",
    "properties": {
        "format": {
            "type": "string",
            "enum": [
                "enumerate",
                "range"
            ]
        },
        "if": {
            "properties": {
                "format": {
                    "const": "range"
                }
            }
        },
        "then": {
            "properties": {
                "angles": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 3,
                    "maxItems": 3
                }
            }
        },
        "else": {
            "properties": {
                "angles": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                }
            }
        }
    },
    "required": [
        "format"
    ]
}